<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Title bar will show the app name from manifest label -->

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_marginTop="32dp"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_video_page"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:text="ðŸŽ¬ Video Page"
            android:textSize="16sp"
            android:background="@drawable/grid_button_background"
            android:textColor="?android:textColorPrimary"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_pdf_page"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:text="ðŸ“„PDF"
            android:textSize="16sp"
            android:background="@drawable/grid_button_background"
            android:textColor="?android:textColorPrimary"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_coming_soon_1"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:text="ðŸ”§ Coming Soon"
            android:textSize="16sp"
            android:background="@drawable/grid_button_background"
            android:textColor="?android:textColorPrimary"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_coming_soon_2"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:text="ðŸ”§ Coming Soon"
            android:textSize="16sp"
            android:background="@drawable/grid_button_background"
            android:textColor="?android:textColorPrimary"/>
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
