<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.SimpleWorld" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Base colors -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorSecondary">@color/teal_200</item>

        <!-- Custom Attributes -->
        <item name="colorButtonNormal">#DDDDDD</item>
        <item name="textColor">@color/white</item>
        <item name="subTextColor">@color/gray</item>
        <item name="android:textColor">@color/white</item> <!-- To be extra safe -->
    </style>
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowMinWidthMajor">80%p</item>
        <item name="android:windowMinWidthMinor">80%p</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>
</resources>

